<launch>
  <arg name="elp_camera_param" default="$(find-pkg-share elp-camera-ros2-driver)/config/elp_camera_node.param.yaml"/>

  <node pkg="elp-camera-ros2-driver" exec="elp_camera_node" name="elp_camera_node" output="screen">
    <param from="$(var elp_camera_param)"/>
    <remap from="camera/left/image_raw" to="/camera/left/image_raw"/>
    <remap from="camera/right/image_raw" to="/camera/right/image_raw"/>
    <remap from="camera/left/camera_info" to="/camera/left/camera_info"/>
    <remap from="camera/right/camera_info" to="/camera/right/camera_info"/>
  </node>
</launch>
